{
  "source": "../../.artefacts/res",
  "destination": "../../.artefacts/_site/lib",
  "plugins": {
    "metalsmith-ignore": [
      "*.swp",
      "drafts/*"
    ],
    "metalsmith-static": [{
        "src": "../../site/lib",
        "dest": "."
      },{
        "src": "../../site/img",
        "dest": "../img"
      }
    ],
    "metalsmith-templates": {
      "engine": "nunjucks",
      "directory": "./templates",
      "default": "hf.hbt"
    }
  }
}

